<p id="notice"><%= notice %></p>

<h1>Beers</h1>

<%= link_to 'beers', root_path %></td>
<%= link_to 'contact us', contact_path %></td>
<%= link_to 'gallery', gallery_path %></td>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Opened</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.title %></td>
        <td><%= beer.description %></td>
        <td><%= beer.price %></td>
        <td><%= beer.opened %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

