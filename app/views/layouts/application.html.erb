<!DOCTYPE html>
<html>
  <head>
    <title>Oktoberfest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>

  </head>

  <body>
    <% if notice %>
    <div class="notification is-success is-marginless"><button class="delete"></button><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="notification is-danger is-marginless"><button class="delete"><%= alert %></button></div>
    <% end %>

    <div class="navbar-end">
      <% if user_signed_in? %>
        <%= link_to 'Edit profile', edit_user_registration_path, class: 'navbar-item' %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'navbar-item'  %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, class: 'navbar-iten'  %>
        <%= link_to "Login", new_user_session_path, class: 'navbar-item'  %>
      <% end %>
    </div>


    <%= yield %>
  </body>
</html>
